<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
            http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
            ">

    <!-- IBIS Beans -->
    <bean name="ibisManager" class="nl.nn.adapterframework.unmanaged.DefaultIbisManager"
        autowire="byName">
        <property name="deploymentMode">
            <util:constant static-field="nl.nn.adapterframework.configuration.IbisManager.DEPLOYMENT_MODE_EJB"/>
        </property>
        <property name="transactionManager" ref="txManager"/>
    </bean>
    
    <bean name="jmsConnector" class="nl.nn.adapterframework.ejb.EjbListenerPortConnector"
        autowire="byName" scope="prototype">
    </bean>
</beans>
